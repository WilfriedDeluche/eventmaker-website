{% capture background_banner %}{% editable_file "Bannière", priority: 100 %}{% endeditable_file %}{% endcapture %}
{% capture title_banner %}{% editable_text "Titre sur bannière", priority: 99 %}Perfect choice for your web and mobile apps.{% endeditable_text %}{% endcapture %}
<div class="dzsparallaxer auto-init" data-options='{   direction: "reverse"}' style="height: 450px;">
  <div class="divimage dzsparallaxer--target " style="width: 101%; height: 600px; background-image: url('{{background_banner}}')"></div>
  <div class=" parallax-text center-it page-title text-center">
    <h1 class="">{{custom_entry.titre}}</h1>
  </div>
</div><!--end page header-->
<!-- <div class="container"> -->
{% if notice %}<div class="alert alert-success">{{ notice }}</div>{% endif %}
{% if alert %}<div class="alert alert-danger">{{ alert }}</div>{% endif %}
{% assign sorted_articles_service = collections.services | sort: 'rank' %}
<div class='container'>
  <div class='space-90'></div>
  <div>
    {{custom_entry.text}}
  </div>
</div>
{% for the_article in sorted_articles_service %}
  {% if custom_entry.sous_collection %}
    {% assign link_to_articles = custom_entry.sous_collection | split: ',' %}
    {% for link_to in link_to_articles %}
      {% if link_to and link_to == the_article.name %}
        <section class="{% if the_article.background_color == 'yes' %}grey-bg{% endif %}">
          <div class="space-90"></div>
          <div class="container">
            <div class="row">
              <div class="col-md-12 margin-b-30">
                {% if the_article.illustration != blank %}
                  <img src="{{the_article.illustration}}" style="max-width:60%;margin-{% if the_article.illustration_align == 'left' %}right{% else %}left{% endif %}:30px;" alt="{{the_article.titre}}" class="{% if the_article.illustration_align == 'left' %}float-left{% else %}float-right{% endif %} img-fluid">
                {% endif %}
                {% if the_article.titre_fr != blank %}
                  <h3>{{the_article.titre_fr}}</h3>
                {% endif %}
                {% if the_article.text_fr != blank %}
                  <div  class="margin-b-20">{{the_article.text_fr}}</div>
                {% endif %}
                {% if the_article.bouton_texte_fr != blank and the_article.bouton_lien != blank %}
                  <a href="{{the_article.bouton_lien}}" target='_blank' class="btn btn-lg btn-primary btn-rounded" title="{{the_article.titre_fr}}">{{the_article.bouton_texte_fr}}</a>
                {% endif %}
              </div>
            </div>
          </div>
          <div class="space-30"></div>
        </section>
      {% endif %}
    {% endfor %}
  {% endif %}
{% endfor %}
